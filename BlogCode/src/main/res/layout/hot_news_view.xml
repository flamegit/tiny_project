<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="13dp"
    android:paddingLeft="7dp"
    tools:context="com.flame.ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="7dp"
        android:layout_margin="7dp">


        <ImageView
            android:id="@+id/news_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hot_now" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/news_icon"
            android:text="Hot Now"
            android:textColor="#555555"
            android:textSize="20sp" />

        <ImageView

            android:id="@+id/refresh_icon"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/refresh" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/news_view1"
                    style="@style/HotNewsImage"
                    app:riv_corner_radius="4dp"
                    android:src="@drawable/aa"
                    />

                <TextView
                    android:id="@+id/keyword_view1"
                    style="@style/HotNewsText"
                    android:text="key word" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/news_view2"
                    style="@style/HotNewsImage"
                    app:riv_corner_radius="4dp"
                    android:src="@drawable/aa"
                    />
                <TextView
                    android:id="@+id/keyword_view2"
                    android:text="key word"
                    style="@style/HotNewsText"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/news_view3"
                    style="@style/HotNewsImage"
                    app:riv_corner_radius="4dp"
                    android:src="@drawable/aa"
                    />
                <TextView
                    android:id="@+id/keyword_view3"
                    android:text="key word"
                    style="@style/HotNewsText"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/news_view4"
                    style="@style/HotNewsImage"
                    app:riv_corner_radius="4dp"
                    android:src="@drawable/aa"
                    />
                <TextView
                    android:id="@+id/keyword_view4"
                    android:text="key word"
                    style="@style/HotNewsText"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/news_view5"
                    style="@style/HotNewsImage"
                    app:riv_corner_radius="4dp"
                    android:src="@drawable/aa"
                    />
                <TextView
                    android:id="@+id/keyword_view5"
                    android:text="key word"
                    style="@style/HotNewsText"
                    />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
